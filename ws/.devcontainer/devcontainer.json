{
    "name": "ROS 2 Development Container",
    "privileged": true,
    "remoteUser": "norden",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "norden"
        }
    },
    "workspaceFolder": "/home/hesai-dev/ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/hesai-dev/ws,type=bind",
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "containerEnv": {
        "DISPLAY": "unix:0",
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
        "ROS_DOMAIN_ID": "42"
    },
    "runArgs": [
        "--net=host",
        "--pid=host",
        "--ipc=host",
        "-e", "DISPLAY=${env:DISPLAY}"
    ],
    "mounts": [
       "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
       "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached"
    ],
    "postCreateCommand": "bash -lc 'set -e; rosdep update || true; rosdep install --from-paths src --ignore-src -y || true; python3 -m venv .venv; .venv/bin/pip install -U pip wheel setuptools; .venv/bin/pip install --no-cache-dir rosbags rosbags-image tqdm'"
}